<html>
    <head>
        <title>Restaurant Finder</title>
    </head>
    <body>
        <h1>Welcome to Restaurant Finder!</h1>

        <p>Input a cuisine:</p>

        <form action='/cuisines' method='post'>
            <label for='food-type'>Cuisine Type:</label>
            <input type='text' name='food-type' id='food-type'>

            <button name='submit'>Add</button>

        </form>

        {% if cuisines is not empty %}
        <p>Here are all your cuisines:</p>
        <ul>
            {% for cuisine in cuisines %}
                <li><a href='/cuisines/{{ cuisine.getId }}'>{{ cuisine.getFoodType }}</a></li>
            {% endfor %}
        </ul>
        {% else %}
            <p>There are no cuisines yet!</p>
        {% endif %}

    </body>
</html>
